<!-- <div class="full"> PUT THIS IN IF WE WANT THE BACKGROUND TO SHOW UP-->
  <div id="page-content-wrapper">
      <div class="container-fluid">
        
<!--         <form class="form-horizontal"> -->
        <legend>Log In</legend>
          <fieldset>
            

              <div class="form-group">
                <%= form_tag sessions_path, class: 'form-horizontal' do %>
                
                <%= label_tag :username, nil, class: 'col-xs-2 control-label' %>
                <div class="col-lg-4">
                  <%= text_field_tag :username, params[:username], class: 'form-control', id: 'inputUsername', placeholder: 'Username' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :password, nil, class: 'col-xs-2 control-label' %>
                <div class="col-lg-4">
                  <%= password_field_tag :password, class: 'form-control', id: 'inputPassword', placeholder: 'Password' %>
                </div>
              </div>
              <div>
                <%= submit_tag "Log In", class: 'btn btn-lg btn-primary scroll' %>
              </div>

            <% end %>

          </fieldset>
<!--         </form> -->
      </div>
  </div>

