<!-- NEW PREFERENCE -->

<!-- BACKGROUND -->
<div id="login-background">
  <div class="overlay-bg">
    <div class="col-xs-12 col-sm-12 col-md-12">

      <!-- CONTENT -->
      <div id="logo-box">

       <!-- tagline -->
       <legend id='center-legend'>Let's get started!</legend>

        <!-- preference form -->
        <fieldset id='preference-fieldset'>
          <%= form_for @preference, :html => {:class => 'form-horizontal'} do |f| %>
          <%= render f %>

          <!-- BACK -->
          <%= link_to 'Back', root_path, class: 'btn btn-warning' %>

          <!-- NEXT -->
          <%= f.submit "Next", class: 'btn btn-warning' %>
          <% end %>
        </fieldset>

      </div>

    </div>
  </div>
</div>
