<% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='form-group' >
  <div class="col-lg-4 sup" >
    <%= form.text_field "username", class: 'form-control', placeholder: 'Username' %>
  </div>
</div>
<br>

<div class="form-group" >
  <div class="col-lg-4 sup" >
    <%= form.file_field "img", class: 'form-control', placeholder: 'Image'  %>
  </div>
</div>
<br>

<div class="form-group" >
  <div class="col-lg-4 sup" >
    <%= form.number_field "age", class: 'form-control', placeholder: 'Age'  %>
  </div>
</div>
<br>

<div class="form-group" >
  <div class="col-lg-4 sup" >
    <%= form.select("gender",[['male', 'male'], ['female', 'female']], { class: 'form-control', value: 'user@domain.com' }, include_blank: true, id: 'select', class: 'form-control') %>
  </div>
</div>
<br>

<div class="form-group" >
  <div class="col-lg-4 sup" >
    <%= form.password_field "password", class: 'form-control', placeholder: 'Password' %>
  </div>
</div>
<br>

<div class="form-group" >
  <div class="col-lg-4 sup">
  <%= form.password_field "password_confirmation", class: 'form-control', placeholder: 'Confirm Password'  %>
  </div>
</div>
<br>
