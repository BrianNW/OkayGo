$( document ).ready(function() {

  var current_username = "<%= @user_data[1].username %>";
  var current_avatar = "<%= @user_data[1].img%>";

  var other_username = "<%= @user_data[0].username %>";
  var other_avatar = "<%= @user_data[0].img%>";

	$("#creatorImage").attr('src', 'http://localhost:3000/'+current_avatar);

  $("#ownerImage").attr('src', 'http://localhost:3000/'+other_avatar);

  $("#yourName").val(current_username);
  $("#yourEmail").val("fake@email.com");

  $("#hisName").val(other_username);
  $("#hisEmail").val("fakerbaker@email.com");

  // before messages appear
  $("#noMessagesImage").attr('src', 'http://localhost:3000/'+current_avatar);
  $("#noMessagesImage2").attr('src', 'http://localhost:3000/'+other_avatar);


  // rewrites chat avatar
  $("body").data("me-avatar", 'http://localhost:3000/'+current_avatar)
  $("body").data("you-avatar", 'http://localhost:3000/'+other_avatar)

  // image when user leaves
  $("#leftImage").attr('src', 'http://localhost:3000/'+current_avatar);


	});
